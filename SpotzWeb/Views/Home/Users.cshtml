@model IEnumerable<SpotzWeb.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}
<h1>Spotz users</h1>

<div class="row">

    <div class="col-md-6"><h3>Gravatar</h3></div>
    <div class="col-md-6"><h3>Username</h3></div>

    @foreach (var user in Model)
    {
        <div class="col-md-12 list-row">
            <div class="col-md-6">
                <img src="@user.GravatarUrl" alt="" />
            </div>

            <div class="col-md-6">
                <p>@Html.ActionLink(user.UserName, "GetSpotzByUser", new { id = user.Id })</p>
            </div>
        </div>
    }

</div>